<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="@dimen/default_margin_side">

    <Button
        android:id="@+id/toastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/buttonBackground"
        android:text="@string/toast"
        android:textColor="@color/buttonText"/>

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_toEndOf="@+id/toastButton"
        android:layout_toRightOf="@+id/toastButton"
        android:background="@color/counterBackground"
        android:text="@string/initial_counter"
        android:textAlignment="center"
        android:textColor="@color/buttonBackground"
        android:textSize="300sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/counterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toastButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/buttonBackground"
        android:onClick="counterButtonPressed"
        android:text="@string/counter"
        android:textColor="@color/buttonText"/>
</RelativeLayout>